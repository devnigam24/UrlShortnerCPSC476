<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.SignUpServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UrlShortnerServlet</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.UrlShortnerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogOut</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.LogOut</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>UpdateUrlCountServlet</display-name>
		<servlet-name>UpdateUrlCountServlet</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.UpdateUrlCountServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Short</servlet-name>
		<servlet-class>com.fullerton.edu.cpsc.cpsc476.servlets.Short</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/SignUpServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UrlShortnerServlet</servlet-name>
		<url-pattern>/UrlShortnerServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogOut</servlet-name>
		<url-pattern>/LogOut</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUrlCountServlet</servlet-name>
		<url-pattern>/UpdateUrlCountServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Short</servlet-name>
		<url-pattern>/Short/*</url-pattern>
	</servlet-mapping>
</web-app>
